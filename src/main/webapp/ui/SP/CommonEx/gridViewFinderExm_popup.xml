//    com.win.openMenu("GridView 데이터 검색", "/ui/SP/CommonEx/GridFinder.xml", "GridFinder", null);
// 3. GridView의 셀을 클릭한다.
// 4. GridView 데이터 검색 단축키 (Ctrl + Shift + f)를 누른다.
// 5. 데이터 검색 창에서 검색 키워드를 입력하고 엔터키를 누른다.
// 6. 검색을 마치고 검색 창을 닫으려면 ESC 키를 누른다.
// ================================================================================================

/**
 * 초기 스크립트 수행 함수 정의
 */
scwin.onpageload = function () {
	
};

/**
 * 화면 초기화 데이터가 모두 로딩되면 발생하는 이벤트
 */
scwin.ondataload = function () {
	com.sbm.execute(sbm_commonGroup);
};

scwin.dlt_commonGrp_onbeforerowpositionchange = function(info) {
	var grpCd = dlt_commonGrp.getCellData(info.newRowIndex, "GRP_CD");
	if (grpCd) {
		var param = { dma_commonGrp: { GRP_CD: grpCd } };
		com.sbm.execute(sbm_commonCode, param);
	}
};
]]></script>
